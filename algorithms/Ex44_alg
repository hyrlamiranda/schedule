
#variavelSimples

var
  n1:Inteiro
  n2, n3, n4 :Inteiro
  #variaveis fora da ordem, variaveis simples sao alocadas de
  #acordo com necessidade do sistema operacional

inicio
    n1 <- 3
    n2 <- 5
    n3 <- 1
    n4 <- 0

#variavelComposta

var
    n1 : inteiro
    n2, n3, n4: inteiro
    n: vetor[1..4] de inteiro
inicio
    n[1] <- 3
    n[2] <- 4
    n[3] <- 5
    n[4] <- 6 
