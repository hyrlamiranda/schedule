algoritmo "Fatorial"
var
    Cont, N, F : Inteiro
inicio
    Escreva("Digite um numero:")
    Leia(N)
    Cont <- N
    F <- 1
    Repita
        F <- F * C
        C <- C - 1
    Ate (C < 1)
    Escreva( " O valor do fatorial de ", N "e igual a " ,F)
fimalgoritmo

#Adcional varios numeros, colocar uma estrutura de repeticao dentro da outra.

algoritmo "Fatorial"
var
    Cont, N, F : Inteiro
    R: Caractere
inicio
Repita
    Escreva("Digite um numero:")
    Leia(N)
    Cont <- N
    F <- 1
    Repita
        F <- F * C
        C <- C - 1
    Ate (C < 1)
    Escreva( " O valor do fatorial de ", N "e igual a " ,F)
    Escreva("Quer continuar? (S/N)")
    Leia(R)
    LimpaTela
Ate( R = "N")
fimalgoritmo
